@model IEnumerable<OnlineShoppingMVC.Models.Product>

@{
    ViewBag.Title = "ProductList";
}

<h2>ProductList</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div align="center" style="background-color:aquamarine">

    <form method="post" action="ProductList">
        <center>
            <img width="150" height="25" src="~/Images/Flipkart.png" />    &nbsp;
            <input type="text" placeholder="Search Products" width="200" />    &nbsp;
            <input type="submit" value="Search" />
        </center>
    </form>
</div><br />
<div align="center">
    <marquee direction="right" height="50" width="1000" bgcolor="mediumseagreen">
        <h2 style="color:white">Welcome To My Shopping Cart</h2>
    </marquee>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            @*<td>
                    <img src="~/images/@item.Picture" width="200" height="200" />
                </td>*@

            <td>
                <form method="get" action="~/Onlinemvc/GetProductById">
                    <a href="GetProductById?id=@item.ProductId">
                        <img src="~/images/@item.Picture" width="200" height="200" />
                        @*<input type="button" value="Add Cart" />*@
                    </a>
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ProductId })
                </td>*@
            @*<td>

                </td>*@

        </tr>

    }

</table>

