@model IEnumerable<OnlineShoppingMVC.Models.Cart>

@{
    ViewBag.Title = "DisplayCart";
}

<h2>DisplayCart</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div align="center" style="background-color:aquamarine">

    <form method="post" action="ProductList">
        <center>
            <img width="150" height="25" src="~/Images/Flipkart.png" />    &nbsp;
            <input type="text" name="name" placeholder="Search Products" width="200" />    &nbsp;
            <input type="submit" value="Search" /><br />
        </center>
    </form>
</div><br />
<div align="center">
    <marquee direction="right" height="50" width="1000" bgcolor="mediumseagreen">
        <h2 style="color:white">Welcome To My Shopping Cart</h2>
    </marquee>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    <img src="~/Images/@item.Picture" width="200" height="200" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <button>
                        @Html.ActionLink("DeleteItem", "DeleteFromCart", new { id = item.ProductId })
                    </button>
                    <button>
                        @Html.ActionLink("Details", "GetDetailsFromCart")
                    </button>
                    <button>
                        @Html.ActionLink("UpdateItem", "UpdateQuantity", new { id = item.ProductId })
                    </button>
                    <button>
                        @Html.ActionLink("PostToCart", "PostToCart", new { id = item.ProductId })
                    </button>
                </td>
            </tr>

        }
    }
</table>
<form method="post" action="PlaceOrder">
    <input type="submit" value="PlaceOrder" />
</form>
<br />
<form method="get" action="Index">
    <input type="submit" value="Continue Shopping" />
</form>


